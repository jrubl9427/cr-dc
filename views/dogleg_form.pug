extends layout

block content
    h1= title
    
    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input#name.form-control(
                type='text'
                placeholder='dogleg name e.g. name-Men/Women-hole#-scratch/bogey-lz#'
                name='name' 
                required='true' 
                value=(undefined===dogleg ? '' : dogleg.name)
            )
        div.form-group
            label(for='effectiveLengthAdjust') EffectiveLengthAdjust of dogleg:
            input#effectiveLengthAdjust.form-control(
                type='number'
                placeholder='EffectiveLengthAdjust of dogleg in yards'
                name='effectiveLengthAdjust' 
                required='true' 
                value=(undefined===dogleg ? '' : dogleg.effectiveLengthAdjust)
            )

        div.form-group
            label(for='Length') length of dogleg:
            input#length.form-control(
                type='number'
                placeholder='length of dogleg in yards'
                name='length' 
                required='true' 
                value=(undefined===dogleg ? '' : dogleg.length)
            )
                    
        button.btn.btn-primary(type='submit') Submit
        
    if errors
        ul
            for error in errors
                li!= error.msg
