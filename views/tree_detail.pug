extends layout

block content
    h1 Tree: #{tree.name}
    
    div(style="margin-left:20px;margin-top:20px")

        p #[strong rating: ] #{tree.rating}
        p #[strong Obstructed Adjust: ] #{tree.obstructed_O}
        p #[strong Chute Adjust: ] #{tree.chute_H}

    div(style="margin-left:20px;margin-top:20px")

        h4 Obstacle
        each obst in obstacle

            div(style="margin-left:40px;")
            
                a(href=obst.url) #{obst.name}
            
    hr

    p 
        a(href=tree.url+'/delete') Delete Tree
    p
        a(href=tree.url+'/update') Update Tree

