extends layout

block content
    h1= title
    
    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input#name.form-control(
                type='text'
                placeholder='Tree name e.g. name-Men/Women-hole#-scratch/bogey-lz#'
                name='name'
                required='true' 
                value=(undefined===tree ? '' : tree.name)
            )

        div.form-group
            label(for='rating') Rating of tree:
            input#rating.form-control(
                type='number'
                placeholder='Rating of tree'
                name='rating' 
                required='true' 
                value=(undefined===tree ? '' : tree.rating)
            )

        div.form-group
            label(for='obstructed_O') Obstructed_O adjustment:
            input#obstructed_O.form-control(
                type='number'
                placeholder='Obstructed_O adjustment'
                name='obstructed_O' 
                required='true' 
                value=(undefined===tree ? '' : tree.obstructed_O)
            )

        div.form-group
            label(for='chute_H') Chute_H adjustment:
            input#visibility.form-control(
                type='number'
                placeholder='Chute_H adjustment'
                name='chute_H' 
                required='true' 
                value=(undefined===tree ? '' : tree.chute_H)
            )
                    
        button.btn.btn-primary(type='submit') Submit
        
    if errors
        ul
            for error in errors
                li!= error.msg
