extends layout

block content
    h1= title
    
    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input#name.form-control(
                type='text'
                placeholder='roll name e.g. name-Men/Women-hole#-scratch/bogey-lz#'
                name='name' 
                required='true' 
                value=(undefined===roll ? '' : roll.name)
            )

        div.form-group
            label(for='rating') Rating of roll:
            input#rating.form-control(
                type='number'
                placeholder='Rating of roll'
                name='rating' 
                required='true' 
                value=(undefined===roll ? '' : roll.rating)
            )

        div.form-group
            label(for='effectiveLengthAdjust') EffectiveLengthAdjust of roll:
            input#effectiveLengthAdjust.form-control(
                type='number'
                placeholder='EffectiveLengthAdjust of roll in yards'
                name='effectiveLengthAdjust' 
                required='true' 
                value=(undefined===roll ? '' : roll.effectiveLengthAdjust)
            )

        div.form-group
            label(for='firm_F') firm_F roll adjustment:
            input#firm_F.form-control(
                type='number'
                placeholder='Firm_F roll adjustment'
                name='firm_F' 
                required='true' 
                value=(undefined===roll ? '' : roll.firm_F)
            )

        div.form-group
            label(for='twoTimes_2') TwoTimes_2 roll adjustment:
            input#twoTimes_2.form-control(
                type='number'
                placeholder='TwoTimes_2 roll adjustment'
                name='twoTimes_2' 
                required='true' 
                value=(undefined===roll ? '' : roll.twoTimes_2)
            )
                    
        button.btn.btn-primary(type='submit') Submit
        
    if errors
        ul
            for error in errors
                li!= error.msg
