extends layout

block content
    h1= title
    
    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input#name.form-control(
                type='text'
                placeholder='Crossing name e.g. name-Men/Women-hole#-scratch/bogey-lz#'
                name='name'
                required='true' 
                value=(undefined===crossing ? '' : crossing.name)
            )

        div.form-group
            label(for='rating') Rating of crossing:
            input#rating.form-control(
                type='number'
                placeholder='Rating of crossing'
                name='rating' 
                required='true' 
                value=(undefined===crossing ? '' : crossing.rating)
            )

        div.form-group
            label(for='percentage_P') Percentage_P adjustment:
            input#percentage_P.form-control(
                type='number'
                placeholder='Percentage_P adjustment'
                name='percentage_P' 
                required='true' 
                value=(undefined===crossing ? '' : crossing.percentage_P)
            )

        div.form-group
            label(for='carry_C') Carry_C adjustment:
            input#visibility.form-control(
                type='number'
                placeholder='Carry_C adjustment'
                name='carry_C' 
                required='true' 
                value=(undefined===crossing ? '' : crossing.carry_C)
            )

        div.form-group
            label(for='twoTimes_2') TwoTimes_2 adjustment:
            input#visibility.form-control(
                type='number'
                placeholder='TwoTimes_2 adjustment'
                name='twoTimes_2' 
                required='true' 
                value=(undefined===crossing ? '' : crossing.twoTimes_2)
            )
                    
        button.btn.btn-primary(type='submit') Submit
        
    if errors
        ul
            for error in errors
                li!= error.msg
