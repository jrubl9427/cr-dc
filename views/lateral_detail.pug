extends layout

block content
    h1 Lateral: #{lateral.name}

    div(style="width:350px;")

        div(style="position:absolute; left:400px; width:400px; margin-top: 0; background:lightgrey; padding:10px")
            p #[strong Instruction box ]
            p To enter rating data select #[strong Update Lateral] link
            p After submitting the data the screen will return here
            p Select the #[strong obstacle link] to return to rate the next obstacle
    
        div(style="margin-left:20px;margin-top:20px")
            p #[strong rating: ] #{lateral.rating}
            p #[strong Percentage Adjust: ] #{lateral.percentage_P}
            p #[strong Bounce Adjust: ] #{lateral.bounce_B}
            p #[strong Squeeze Adjust: ] #{lateral.squeeze_Q}
            p #[strong Stroke Adjust: ] #{lateral.stroke_K}
            p #[strong Two Adjust: ] #{lateral.twoTimes_2}
            p #[strong Surrounded: ] #{lateral.surrounded_S}

        div(style="margin-left:20px;margin-top:20px")

            if lzObstacle.length > 0 || greenObstacle.length > 0
                h4 Obstacles
                each obst in lzObstacle

                    div(style="margin-left:40px;")
                    
                        a(href=obst.url) #{obst.name}
                each obst in greenObstacle

                    div(style="margin-left:40px;")
                    
                        a(href=obst.url) #{obst.name}
            
    hr

    p 
        a(href=lateral.url+'/delete') Delete Lateral
    p
        a(href=lateral.url+'/update') Update Lateral

