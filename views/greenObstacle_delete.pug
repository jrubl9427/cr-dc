extends layout

block content
    h1 GreenObstacle: #{greenObstacle.name} Delete
    
    p #[strong RRs:]
        ul
            li 
                a(href=greenObstacle.rR.url) #[strong RR: ] #{greenObstacle.rR.name}
    hr
    
    p #[strong Bunkers:]
        ul
            li 
                a(href=greenObstacle.bunker.url) #[strong Bunker: ] #{greenObstacle.bunker.name}
    hr
    
    p #[strong Laterals:] 
        ul
            li 
                a(href=greenObstacle.lateral.url) #[strong Lateral: ] #{greenObstacle.lateral.name}
    hr

    p #[strong Trees:]
        ul
            li 
                a(href=greenObstacle.tree.url) #[strong Tree: ] #{greenObstacle.tree.name}
    hr
    
    p #[strong Surfaces:] 
        ul
            li 
                a(href=greenObstacle.surface.url) #[strong Surface: ] #{greenObstacle.surface.name}
    hr

    if greenObstacle.rR != null
    
        p #[strong Delete all rRs before attempting to delete this greenObstacle.]

    if greenObstacle.bunker != null
    
        p #[strong Delete all bunkers before attempting to delete this greenObstacle.]

    if greenObstacle.lateral != null
    
        p #[strong Delete all laterals before attempting to delete this greenObstacle.]

    if greenObstacle.tree != null
    
        p #[strong Delete all trees before attempting to delete this greenObstacle.]

    if greenObstacle.surface != null
    
        p #[strong Delete all surfaces before attempting to delete this greenObstacle.]
        
    else 
        p Do you really want to delete this greenObstacle?
        
        form(method='POST' action='')
            div.form-group
                input#id.form-control(type='hidden' name='greenObstacleid', required='true' value=greenObstacle._id)

            button.btn.btn-primary(type='submit') Delete