extends layout

block content
    h1= title
    
    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input#name.form-control(
                type='text'
                placeholder='LzObstacle name'
                name='name' 
                required='true' 
                value=(undefined===lzObstacle ? '' : lzObstacle.name)
            )
        
        div.form-group
            label Layups:
            for layup in layups
                div(style="padding-right:10px;")
                    if !layup.name.includes("Tee") && !layup.name.includes("Green")
                        input.checkbox-input(
                            type="checkbox", 
                            name="layup", 
                            id=layup._id, 
                            value=layup._id, 
                            checked=layup.checked )
                        label(for=layup._id) #{layup.name}

