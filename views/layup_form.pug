extends layout

block content
    h1= title
    
    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input#name.form-control(
                type='text'
                placeholder='Layup name e.g. name-Men/Women-hole#-scratch/bogey-lz#'
                name='name' 
                required='true' 
                value=(undefined===layup ? '' : layup.name)
            )
        div.form-group
            label(for='effectiveLengthAdjust') EffectiveLengthAdjust of layup:
            input#effectiveLengthAdjust.form-control(
                type='number'
                placeholder='EffectiveLengthAdjust of layup in yards'
                name='effectiveLengthAdjust' 
                required='true' 
                value=(undefined===layup ? '' : layup.effectiveLengthAdjust)
            )

        div.form-group
            label(for='Length') length of layup:
            input#length.form-control(
                type='number'
                placeholder='length of layup in yards'
                name='length' 
                required='true' 
                value=(undefined===layup ? '' : layup.length)
            )

        div.form-group
            label(for='typeLayup') typeLayup of layup:
            input#typeLayup.form-control(
                type='text'
                placeholder='typeLayup enter forced or choice'
                name='typeLayup' 
                required='true' 
                value=(undefined===layup ? '' : layup.typeLayup)
            )
                    
        button.btn.btn-primary(type='submit') Submit
        
    if errors
        ul
            for error in errors
                li!= error.msg
